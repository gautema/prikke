<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="csrf-token" content={get_csrf_token()} />
    <.live_title default="Prikke">
      {assigns[:page_title]}
    </.live_title>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link phx-track-static rel="stylesheet" href={~p"/assets/css/app.css"} />
    <script defer phx-track-static type="text/javascript" src={~p"/assets/js/app.js"}>
    </script>
    <script>
      (() => {
        const setTheme = (theme) => {
          if (theme === "system") {
            localStorage.removeItem("phx:theme");
            document.documentElement.removeAttribute("data-theme");
          } else {
            localStorage.setItem("phx:theme", theme);
            document.documentElement.setAttribute("data-theme", theme);
          }
        };
        if (!document.documentElement.hasAttribute("data-theme")) {
          setTheme(localStorage.getItem("phx:theme") || "system");
        }
        window.addEventListener("storage", (e) => e.key === "phx:theme" && setTheme(e.newValue || "system"));
        
        window.addEventListener("phx:set-theme", (e) => setTheme(e.target.dataset.phxTheme));
      })();
    </script>
  </head>
  <body class="bg-slate-50 min-h-screen">
    <%= unless assigns[:hide_header] do %>
      <header class="bg-white border-b border-slate-200">
        <nav class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 h-14 flex items-center justify-between">
          <a
            href="/"
            class="flex items-center gap-2 text-lg font-semibold text-slate-900 no-underline"
          >
            <div class="w-3 h-3 bg-emerald-500 rounded-full"></div>
            prikke
          </a>
          
<!-- Mobile menu button -->
          <button type="button" class="sm:hidden p-2 text-slate-600" data-mobile-menu-toggle>
            <span data-menu-icon-open>
              <.icon name="hero-bars-3" class="w-6 h-6" />
            </span>
            <span class="hidden" data-menu-icon-close>
              <.icon name="hero-x-mark" class="w-6 h-6" />
            </span>
          </button>
          
<!-- Desktop nav -->
          <div class="hidden sm:flex items-center gap-4">
            <%= if @current_scope do %>
              <.link
                href={~p"/dashboard"}
                class="text-sm font-medium text-slate-700 hover:text-emerald-600"
              >
                Dashboard
              </.link>
              <!-- Org Switcher -->
              <%= if assigns[:organizations] && length(@organizations) > 0 do %>
                <div class="relative" data-dropdown>
                  <button
                    type="button"
                    class="flex items-center gap-2 text-sm text-slate-700 hover:text-slate-900 px-3 py-1.5 rounded-md hover:bg-slate-100 transition-colors"
                    data-dropdown-toggle
                  >
                    <span class="font-medium">
                      {if @current_organization,
                        do: @current_organization.name,
                        else: "Select org"}
                    </span>
                    <.icon name="hero-chevron-down" class="w-4 h-4 text-slate-400" />
                  </button>
                  <div
                    class="hidden absolute right-0 mt-1 w-56 bg-white border border-slate-200 rounded-lg shadow-lg py-1 z-50"
                    data-dropdown-menu
                  >
                    <%= for org <- @organizations do %>
                      <%= if @current_organization && org.id == @current_organization.id do %>
                        <div class="px-4 py-2 text-sm text-slate-900 bg-slate-50 flex items-center justify-between">
                          <span>{org.name}</span>
                          <.icon name="hero-check" class="w-4 h-4 text-emerald-500" />
                        </div>
                      <% else %>
                        <.link
                          href={~p"/organizations/#{org.id}/switch"}
                          method="post"
                          class="block px-4 py-2 text-sm text-slate-700 hover:bg-slate-50 no-underline"
                        >
                          {org.name}
                        </.link>
                      <% end %>
                    <% end %>
                    <div class="border-t border-slate-200 mt-1 pt-1">
                      <%= if @current_organization do %>
                        <.link
                          href={~p"/organizations/settings"}
                          class="block px-4 py-2 text-sm text-slate-700 hover:bg-slate-50 no-underline flex items-center gap-2"
                        >
                          <.icon name="hero-cog-6-tooth" class="w-4 h-4 text-slate-400" />
                          Organization settings
                        </.link>
                      <% end %>
                      <.link
                        href={~p"/organizations/new"}
                        class="block px-4 py-2 text-sm text-emerald-600 hover:bg-slate-50 no-underline"
                      >
                        + New organization
                      </.link>
                    </div>
                  </div>
                </div>
              <% end %>
              <span class="w-px h-5 bg-slate-200"></span>
              <span class="text-sm text-slate-500 hidden md:inline">
                {@current_scope.user.email}
              </span>
              <%= if assigns[:pending_invites_count] && @pending_invites_count > 0 do %>
                <.link
                  href={~p"/invites"}
                  class="text-sm text-slate-600 hover:text-slate-900 flex items-center gap-1.5"
                >
                  Invites
                  <span class="inline-flex items-center justify-center w-5 h-5 text-xs font-medium text-white bg-emerald-500 rounded-full">
                    {@pending_invites_count}
                  </span>
                </.link>
              <% end %>
              <.link
                href={~p"/users/settings"}
                class="text-sm text-slate-600 hover:text-slate-900"
              >
                Settings
              </.link>
              <.link
                href={~p"/users/log-out"}
                method="delete"
                class="text-sm text-slate-600 hover:text-slate-900"
              >
                Log out
              </.link>
            <% else %>
              <.link
                href={~p"/users/register"}
                class="text-sm text-slate-600 hover:text-slate-900"
              >
                Register
              </.link>
              <.link
                href={~p"/users/log-in"}
                class="text-sm font-medium text-white bg-emerald-500 hover:bg-emerald-600 px-4 py-2 rounded-md transition-colors"
              >
                Log in
              </.link>
            <% end %>
          </div>
        </nav>
        
<!-- Mobile menu (overlay) -->
        <div
          class="hidden sm:hidden fixed inset-x-0 top-14 bottom-0 bg-white border-t border-slate-200 z-50 overflow-y-auto"
          data-mobile-menu
        >
          <div class="px-4 py-3 space-y-3">
            <%= if @current_scope do %>
              <.link href={~p"/dashboard"} class="block text-sm font-medium text-slate-700">
                Dashboard
              </.link>
              <%= if assigns[:organizations] && length(@organizations) > 0 do %>
                <div class="py-2 border-t border-slate-100">
                  <p class="text-xs text-slate-400 uppercase tracking-wide mb-2">Organizations</p>
                  <%= for org <- @organizations do %>
                    <%= if @current_organization && org.id == @current_organization.id do %>
                      <div class="flex items-center justify-between py-1.5 text-sm text-slate-900">
                        <span>{org.name}</span>
                        <.icon name="hero-check" class="w-4 h-4 text-emerald-500" />
                      </div>
                    <% else %>
                      <.link
                        href={~p"/organizations/#{org.id}/switch"}
                        method="post"
                        class="block py-1.5 text-sm text-slate-600 no-underline"
                      >
                        {org.name}
                      </.link>
                    <% end %>
                  <% end %>
                  <%= if @current_organization do %>
                    <.link
                      href={~p"/organizations/settings"}
                      class="block py-1.5 text-sm text-slate-600 no-underline flex items-center gap-2"
                    >
                      <.icon name="hero-cog-6-tooth" class="w-4 h-4 text-slate-400" />
                      Organization settings
                    </.link>
                  <% end %>
                  <.link
                    href={~p"/organizations/new"}
                    class="block py-1.5 text-sm text-emerald-600 no-underline"
                  >
                    + New organization
                  </.link>
                </div>
              <% end %>
              <div class="pt-2 border-t border-slate-100 space-y-2">
                <p class="text-xs text-slate-400">{@current_scope.user.email}</p>
                <%= if assigns[:pending_invites_count] && @pending_invites_count > 0 do %>
                  <.link
                    href={~p"/invites"}
                    class="block text-sm text-slate-600 flex items-center gap-1.5"
                  >
                    Invites
                    <span class="inline-flex items-center justify-center w-5 h-5 text-xs font-medium text-white bg-emerald-500 rounded-full">
                      {@pending_invites_count}
                    </span>
                  </.link>
                <% end %>
                <.link href={~p"/users/settings"} class="block text-sm text-slate-600">
                  Settings
                </.link>
                <.link
                  href={~p"/users/log-out"}
                  method="delete"
                  class="block text-sm text-slate-600"
                >
                  Log out
                </.link>
              </div>
            <% else %>
              <.link href={~p"/users/register"} class="block text-sm text-slate-600">
                Register
              </.link>
              <.link href={~p"/users/log-in"} class="block text-sm font-medium text-emerald-600">
                Log in
              </.link>
            <% end %>
          </div>
        </div>
      </header>
    <% end %>
    {@inner_content}
  </body>
</html>
